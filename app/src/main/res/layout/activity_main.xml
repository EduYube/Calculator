<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.eyubero.calculator.MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/firstCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|end"
        android:textColor="#80808080"
        android:padding="15dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/valueCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|end"
        android:text="0"
        android:textColor="#000000"
        android:padding="15dp"
        android:textSize="30sp" />
</LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="clear"
                android:text="AC" />

            <Button
                android:id="@+id/plusMinus"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="plusMinus"
                android:text="+/-" />

            <Button
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="mathFunctions"
                android:text="%" />

            <Button
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="mathFunctions"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="7" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="8" />

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="9" />

            <Button
                android:id="@+id/multiplicate"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="mathFunctions"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="4" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="5" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="6" />

            <Button
                android:id="@+id/resta"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="mathFunctions"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="1" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="2" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="numberSelected"
                android:text="3" />

            <Button
                android:id="@+id/sume"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:onClick="mathFunctions"
                android:text="+" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:onClick="numberSelected"
            android:text="0" />

        <Button
            android:id="@+id/coma"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="," />

        <Button
            android:id="@+id/equal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:onClick="mathFunctions"
            android:text="=" />
    </LinearLayout>

</LinearLayout>
